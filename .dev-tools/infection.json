{
    "$schema": "./vendor/infection/infection/resources/schema.json",
    "source": {
        "directories": [
            "../src"
        ]
    },
    "timeout": 5,
    "logs": {
        "text": "php://stdout",
        "github": true,
        "stryker": {
            "report": "main"
        }
    },
    "phpUnit": {
        "configDir": "..",
        "customPath": "../vendor/phpunit/phpunit/phpunit"
    },
    "mutators": {
        "Ternary": true,
        "This": true,
        "Throw_": true,
        "TrueValue": true
    },
    "bootstrap": "../vendor/autoload.php"
}
