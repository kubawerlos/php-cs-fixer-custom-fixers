{
    "name": "kubawerlos/php-cs-fixer-custom-fixers",
    "type": "library",
    "description": "A set of custom fixers for PHP CS Fixer",
    "license": "MIT",
    "authors": [
        {
            "name": "Kuba WerÅ‚os",
            "email": "werlos@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-tokenizer": "*",
        "friendsofphp/php-cs-fixer": "^2.16.1",
        "symfony/finder": "^3.0 || ^4.0 || ^5.0"
    },
    "require-dev": {
        "johnkary/phpunit-speedtrap": "^3.1.0",
        "phpunit/phpunit": "^7.5.20 || ^8.5.2"
    },
    "autoload": {
        "psr-4": {
            "PhpCsFixerCustomFixers\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "./tests",
            "PhpCsFixerCustomFixersDev\\": "./dev-tools/src"
        }
    },
    "scripts": {
        "analyse": [
            "composer analyse --working-dir=./dev-tools"
        ],
        "fix": [
            "composer fix --working-dir=./dev-tools",
            "php ./dev-tools/readme > ./README.md"
        ],
        "infection": [
            "composer infection --working-dir=./dev-tools"
        ],
        "test": [
            "phpunit"
        ],
        "verify": [
            "@analyse",
            "@test"
        ]
    }
}
