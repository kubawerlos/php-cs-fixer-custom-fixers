{
    "name": "kubawerlos/php-cs-fixer-custom-fixers",
    "type": "library",
    "description": "A set of custom fixers for PHP CS Fixer",
    "keywords": [
        "fixer",
        "php-cs-fixer"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Kuba WerÅ‚os",
            "email": "werlos@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-tokenizer": "*",
        "friendsofphp/php-cs-fixer": "^2.14",
        "symfony/finder": "^4.0"
    },
    "require-dev": {
        "ext-json": "*",
        "johnkary/phpunit-speedtrap": "^3.1",
        "kubawerlos/types-checker": "^1.1",
        "phpunit/phpunit": "^7.4 || ^8.0",
        "sebastian/diff": "^3.0",
        "symfony/console": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "PhpCsFixerCustomFixers\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpCsFixerCustomFixersDev\\": "src-dev",
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": [
            "composer validate --strict",
            "composer normalize --dry-run --working-dir=./dev-tools ./../composer.json",
            "./dev-tools/vendor/bin/composer-require-checker check ./composer.json",
            "./dev-tools/vendor/bin/phpcs --exclude=Generic.Files.LineLength --report-full --standard=PSR2 ./src ./tests",
            "./vendor/bin/types-checker ./src ./tests",
            "PHP_CS_FIXER_FUTURE_MODE=1 ./vendor/bin/php-cs-fixer fix --ansi --diff --dry-run --verbose",
            "./dev-tools/vendor/bin/phpcpd ./src",
            "./dev-tools/vendor/bin/phpmd ./src text ./phpmd.xml",
            "./dev-tools/vendor/bin/phpstan analyse --ansi",
            "./dev-tools/vendor/bin/psalm --find-dead-code"
        ],
        "fix": [
            "composer normalize --working-dir=./dev-tools ./../composer.json",
            "./dev-tools/vendor/bin/phpcbf --exclude=Generic.Files.LineLength --report-full --standard=PSR2 ./src ./tests",
            "PHP_CS_FIXER_FUTURE_MODE=1 ./vendor/bin/php-cs-fixer fix --ansi --verbose",
            "./src-dev/Readme/run > README.md"
        ],
        "test": [
            "./vendor/bin/phpunit"
        ],
        "verify": [
            "@analyse",
            "@test"
        ]
    }
}
