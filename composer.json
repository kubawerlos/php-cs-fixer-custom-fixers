{
    "name": "kubawerlos/php-cs-fixer-custom-fixers",
    "description": "A set of custom fixers for PHP CS Fixer",
    "type": "library",
    "keywords": [
        "fixer",
        "php-cs-fixer"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Kuba Wer≈Ços",
            "email": "werlos@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "ext-tokenizer": "*",
        "friendsofphp/php-cs-fixer": "^2.12"
    },
    "require-dev": {
        "kubawerlos/composer-json-fixer": "^2.1",
        "kubawerlos/types-checker": "^1.1",
        "phpunit/phpunit": "^7.2",
        "sebastian/diff": "^3.0",
        "squizlabs/php_codesniffer": "^3.3",
        "symfony/console": "^4.1",
        "symfony/finder": "^4.1",
        "symfony/yaml": "^4.1",
        "vimeo/psalm": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PhpCsFixerCustomFixers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@analyse",
            "@phpunit"
        ],
        "analyse": [
            "vendor/bin/composer-json-fixer",
            "vendor/bin/phpcs --exclude=Generic.Files.LineLength --report-full --standard=PSR2 src tests",
            "vendor/bin/php-cs-fixer fix --config=tests/php-cs-fixer.config.php --diff --dry-run",
            "vendor/bin/types-checker src tests",
            "vendor/bin/psalm --config=tests/psalm.xml --find-dead-code"
        ],
        "phpunit": [
            "phpdbg -qrr vendor/bin/phpunit --configuration=tests/phpunit.xml"
        ]
    }
}
